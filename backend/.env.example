# ===========================================
# Curelink Mini AI Health Coach - Environment
# ===========================================

# MongoDB Connection
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=curelink_health_coach

# LLM Provider Configuration
# Options: "gemini", "openai", "azure"
LLM_PROVIDER=azure

# Google Gemini (if LLM_PROVIDER=gemini)
GEMINI_API_KEY=""

# OpenAI (if LLM_PROVIDER=openai)
OPENAI_API_KEY=""

# Azure OpenAI (if LLM_PROVIDER=azure)
AZURE_OPENAI_API_KEY=""
AZURE_OPENAI_ENDPOINT=""
AZURE_OPENAI_DEPLOYMENT=""
AZURE_OPENAI_API_VERSION=""

# LLM Settings
MAX_CONTEXT_TOKENS=8000
LLM_TIMEOUT_SECONDS=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# CORS (comma-separated origins for production)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Environment
ENVIRONMENT=development

# WhatsApp Business API
WA_ACCESS_TOKEN=your_whatsapp_access_token_here
WA_PHONE_NUMBER_ID=your_phone_number_id_here
WA_VERIFY_TOKEN=choose_a_random_secret_string
